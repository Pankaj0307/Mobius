<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <size
                android:width="120dp"
                android:height="40dp" />
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="#63c816"
                android:endColor="#029811" />
            <corners android:radius="0dp" />
        </shape>
    </item>


    <item
        android:bottom="36dp"
        android:left="-105dp"
        android:right="90dp"
        android:top="-33dp">
        <rotate android:fromDegrees="46">
            <shape android:shape="rectangle">
                <solid android:color="@color/cream" />
            </shape>
        </rotate>
    </item>


</layer-list>